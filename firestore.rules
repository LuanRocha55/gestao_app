rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Usuários: Permite que usuários logados leiam a lista de todos os usuários,
    // mas só podem escrever em seu próprio documento.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Serviços: Permite que usuários logados leiam todos os serviços,
    // mas só podem criar, atualizar ou deletar os seus.
    match /services/{serviceId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;

      // Comentários: Permite que usuários logados leiam e criem comentários.
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
      }
    }

    // Categorias: Permite que usuários logados leiam, mas apenas admins podem modificar.
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Solicitações: Regras mais detalhadas para solicitações.
    match /requests/{requestId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.requesterId;
        // Admins podem atualizar qualquer solicitação, usuários podem atualizar as suas.
        allow update: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == resource.data.requesterId);
    }

    // Notificações: Usuários só podem acessar suas próprias notificações.
    match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // E-mails: Apenas o backend (Cloud Functions) pode escrever aqui.
    match /mail/{mailId} {
        allow read: if false; // Ninguém pode ler
        allow write: if false; // Apenas o servidor pode escrever
    }
  }
}
